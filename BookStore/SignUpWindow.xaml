<Window x:Class="BookStoreApp.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreApp"
        mc:Ignorable="d"
        Title="SignUpWindow" Height="450" Width="800" Icon="https://imglife.pravda.com.ua/life/images/doc/4/8/34858/4862abb-billiondigital-depositphotos-1320.jpg">
    
    <Grid Background="#f4f4f4">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition  Height="100"/>
                <RowDefinition  Height="100"/>
                <RowDefinition  Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Background="Gray">
                <TextBlock Text="Book store app" FontSize="22" HorizontalAlignment="center" Foreground="DarkMagenta"/>
            </Border>

            <Image Source="https://imglife.pravda.com.ua/life/images/doc/4/8/34858/4862abb-billiondigital-depositphotos-1320.jpg"  Grid.Row="1" Width="150" Height="90"/>


        <Label Grid.Row="2" HorizontalContentAlignment="Center" >Login</Label>
            <TextBox Name="UserLogin" Width="200" Height="auto" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBox>

        <Label Grid.Row="3" HorizontalAlignment="Center">Enter password 2 times</Label>
            <TextBox Name="UserPassword" Width="200" Height="auto" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBox>
            <TextBox Name="UserPassword2" Width="200" Height="auto" Grid.Row="3"  VerticalAlignment="Bottom"></TextBox>


        <Button Grid.Row="4" Width="100" Height="30" Content="Sign up" Click="SignUp_Button"></Button>
        
        <Button Grid.Row="4" Width="200" Height="30" Content="Already have an account? Sign in" HorizontalAlignment="right" Click="SignIn_Button" Margin="25"/>
    </Grid>

</Window>
