<Window x:Class="BookStoreApp.AddWindows.AddGenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreApp.AddWindows"
        mc:Ignorable="d"
        Title="AddGenre" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Genre name" Width="100" HorizontalAlignment="Left"/>
        <TextBox Name="GenreName" Width="100" Height="30" HorizontalAlignment="Left" Grid.Row="1" Background="LightGray" VerticalAlignment="Top"/>

        <Label Content="Book" Grid.Row="2"></Label>
        <ComboBox Name="BooksBox" Width="100" Height="50" Grid.Row="3" HorizontalAlignment="Left"/>


        <Button Name="AddGenreButton" Width="100" Height="30" HorizontalAlignment="Center" Content="Add Genre" VerticalAlignment="Top" Grid.Row="4" Click="AddGenreButton_Click"/>
    </Grid>
</Window>
