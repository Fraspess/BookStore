<Window x:Class="BookStoreApp.AddWindows.AddDiscount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreApp.AddWindows"
        mc:Ignorable="d"
        Title="AddDiscount" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>      
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>      
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Left" Content="Discount in %" Grid.Row="0"></Label>
        <TextBox Name="Discount" Grid.Row="1" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Background="LightGray"></TextBox>

        <Label HorizontalAlignment="Left" Content="Book" Grid.Row="2"/>
        <ComboBox Name="Books" Width="100" Height="40" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Label HorizontalAlignment="Left" Content="Start Date" Grid.Row="4" VerticalAlignment="Top"/>
        <TextBox Name="StartDate" Width="100" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="5" Background="LightGray"></TextBox>    
        
        <Label HorizontalAlignment="Left" Content="End Date" Grid.Row="6" VerticalAlignment="Top"/>
        <TextBox Name="EndDate" Width="100" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="7" Background="LightGray"></TextBox>
        
        

        <Button Name="AddDiscountButton" Content="Add Discount" Grid.Row="8" Height="40" Width="100" VerticalAlignment="Top" Click="AddDiscountButton_Click"/>
    </Grid>
</Window>
